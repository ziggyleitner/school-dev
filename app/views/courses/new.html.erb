<h1>New course</h1>

<% form_for(@course) do |f| %>
  <%= f.error_messages %>

  <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :pretty_name %><br />
      <%= f.text_field :pretty_name %>
    </p>
    <p>
        <%= f.label :description %><br />
        <%= f.text_field :description %>
    </p>
    <p>
          <%= f.label :intro_text %><br />
          <%= f.text_field :intro_text %>
    </p>
    <p>
          <%= f.label :intro_audio_path %><br />
          <%= f.text_field :intro_audio_path %>
    </p>
    <p>
          <%= f.label :intro_video_path %><br />
          <%= f.text_field :intro_video_path %>
    </p>
    <p>
          <%= f.label :content_video_path %><br />
          <%= f.text_field :content_video_path %>
    </p>
    <p>
          <%= f.label :content_audio_path %><br />
          <%= f.text_field :content_audio_path %>
    </p>
    <p>
      <%= f.label :header %><br />
      <%= f.text_field :header %>
    </p>
    <p>
      <%= f.label :footer %><br />
      <%= f.text_field :footer %>
    </p>
    <p>
      <%= f.label :content_text %><br />
      <%= f.text_area :content_text %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', courses_path %>
